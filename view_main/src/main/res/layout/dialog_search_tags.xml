<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="by.off.photomap.presentation.ui.timeline.search.SearchTagViewModel" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/overlayBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/blockSearchContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/blockSearchBar"
                style="@style/SearchVarBlockFloat"
                android:clickable="true"
                android:elevation="@dimen/search_elevation"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/search_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/search_controls_margin"
                    android:alpha="@dimen/search_control_alpha"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back_24"
                    android:tint="@color/search_controls" />

                <EditText
                    android:id="@+id/inputSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_input_margin"
                    android:layout_marginBottom="@dimen/search_input_margin"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_input_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="textFilter"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/search_text"
                    android:textColorHint="@color/search_hint" />

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/search_controls_margin"
                    android:alpha="@dimen/search_control_alpha"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_search_24"
                    android:tint="@color/search_controls"
                    android:visibility="@{model.searchProgress ? View.GONE : View.VISIBLE}" />

                <ProgressBar
                    android:id="@+id/progressSearch"
                    android:layout_width="@dimen/search_control_size"
                    android:layout_height="@dimen/search_control_size"
                    android:layout_marginStart="@dimen/search_controls_margin"
                    android:alpha="@dimen/search_control_alpha"
                    android:indeterminateTint="@color/search_controls"
                    android:padding="@dimen/search_progress_padding"
                    android:visibility="@{model.searchProgress ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible" />
            </LinearLayout>

            <View
                android:id="@+id/dividerSearchBar"
                style="@style/DividerHorizontal"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@id/blockSearchBar"
                app:layout_constraintStart_toStartOf="@id/blockSearchBar"
                app:layout_constraintTop_toBottomOf="@id/blockSearchBar" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listSearchResults"
                style="@style/SearchResultsList"
                android:layout_width="0dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/blockSearchBar"
                app:layout_constraintStart_toStartOf="@id/blockSearchBar"
                app:layout_constraintTop_toBottomOf="@id/dividerSearchBar"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/blockHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_results"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/search_hint_padding"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/blockSearchBar"
                app:layout_constraintStart_toStartOf="@id/blockSearchBar"
                app:layout_constraintTop_toBottomOf="@id/dividerSearchBar"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/txtSearchStartHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_sample_hint"
                    android:textColor="@color/search_hint" />

                <android.support.design.chip.Chip
                    android:id="@+id/chipHintSample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/widget_margin_h_m"
                    android:text="@string/search_sample"
                    android:textAppearance="@style/ChipTextStyle"
                    app:chipBackgroundColor="@color/colorAccent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blockEmptyResults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_results"
                android:orientation="horizontal"
                android:padding="@dimen/search_hint_padding"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/blockSearchBar"
                app:layout_constraintStart_toStartOf="@id/blockSearchBar"
                app:layout_constraintTop_toBottomOf="@id/dividerSearchBar"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/no_tags_found_for(model.searchText)}" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>