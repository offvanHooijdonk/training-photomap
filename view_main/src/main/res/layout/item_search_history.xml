<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="by.off.photomap.presentation.ui.timeline.search.ResultItemViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/item_margin_horizontal"
        android:paddingTop="@dimen/item_margin_vertical_dense"
        android:paddingEnd="@dimen/item_margin_horizontal"
        android:paddingBottom="@dimen/item_margin_vertical_dense">

        <ImageView
            android:id="@+id/imgHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@dimen/search_control_alpha"
            android:src="@drawable/ic_history_24"
            android:tint="@color/search_controls"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHistory"
            searchText="@{model.searchText}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin_horizontal"
            android:layout_marginEnd="@dimen/item_margin_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.valueText}"
            android:textSize="@dimen/chip_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgInferHistory"
            app:layout_constraintStart_toEndOf="@id/imgHistory"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/fish_text_short" />

        <ImageView
            android:id="@+id/imgInferHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@dimen/search_control_alpha"
            android:background="?selectableItemBackgroundBorderless"
            android:rotation="45"
            android:src="@drawable/ic_back_24"
            android:tint="@color/search_controls"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgRemoveHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@dimen/search_control_alpha"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_24"
            android:tint="@color/search_controls"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />
    </android.support.constraint.ConstraintLayout>
</layout>